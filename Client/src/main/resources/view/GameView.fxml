<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" prefHeight="400.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exam.client.controller.GameController">
    <BorderPane fx:id="menuPane" prefHeight="200.0" prefWidth="200.0">
      <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Label fx:id="letterSet" text="Letter Set" />
            <Label fx:id="generatedNumber" text="Generated number" />
                <Button fx:id="send" mnemonicParsing="false" onAction="#send" text="Generate and send number" />
            </VBox>
      </center>
      <bottom>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
               <Label fx:id="lastPlayer" text="Last player">
                  <HBox.margin>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </HBox.margin>
               </Label>
               <Label fx:id="lastGN" text="Last generated number">
                  <HBox.margin>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </HBox.margin>
               </Label>
            </children>
         </HBox>
      </bottom>
    </BorderPane>
</StackPane>
