<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" prefHeight="400.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exam.client.controller.GameController">
    <BorderPane fx:id="menuPane" prefHeight="200.0" prefWidth="200.0">
      <bottom>
         <TableView fx:id="scoreTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <columns>
             <TableColumn fx:id="p1" minWidth="200.0" prefWidth="200.0" text="Player1" />
             <TableColumn fx:id="p2" minWidth="200.0" prefWidth="200.0" text="Player2" />
               <TableColumn fx:id="p3" minWidth="200.0" prefWidth="200.0" text="Player3" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </bottom>
      <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Label fx:id="letterSet" text="Letter Set" />
            <TextField fx:id="newWord" maxWidth="200.0" prefWidth="200.0" promptText="New Word">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
                <Button fx:id="send" mnemonicParsing="false" onAction="#send" text="Send" />
            </VBox>
      </center>
    </BorderPane>
</StackPane>
