<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" prefHeight="400.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exam.client.controller.GameController">
    <BorderPane fx:id="menuPane" prefHeight="200.0" prefWidth="200.0">
      <bottom>
         <TableView fx:id="scoreTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <columns>
             <TableColumn fx:id="p1" minWidth="200.0" prefWidth="200.0" text="Player1" />
             <TableColumn fx:id="p2" minWidth="200.0" prefWidth="200.0" text="Player2" />
               <TableColumn fx:id="p3" minWidth="200.0" prefWidth="200.0" text="Player3" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </bottom>
      <center>
         <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                      <Label fx:id="p1Field" text="p1 game field" />
                  <Spinner fx:id="p1nr" editable="true" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Spinner>
                      <Button fx:id="p1Button" mnemonicParsing="false" onAction="#p1Send" text="Send" />
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
                  </VBox>
               <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                  <children>
                     <Label fx:id="p2Field" text="p2 game field" />
                     <Spinner fx:id="p2nr" editable="true">
                        <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                     </Spinner>
                     <Button fx:id="p2Button" mnemonicParsing="false" onAction="#p2Send" text="Send" />
                  </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </VBox>
            </children>
         </HBox>
      </center>
    </BorderPane>
</StackPane>
